<%- include('partials/header') %>
<div id="form-contact">
   <h2>Contact me</h2>
   <div id="content-form">
    <form action="/contact" method="post">
        <label>Email<span>*</span><br>
            <input type="email" name="email" id="email" placeholder="Enter your email" required>
        </label>
        <br>
        <label for="subject">Subject<span>*</span><br>
            <input type="subject" name="subject" id="subject" placeholder="Type the subject">
        </label>
        <br>
        <label for="message">Message<span>*</span><br>
        <textarea name="message" id="message" cols="30" rows="10" placeholder="Type your message here..."></textarea></label>
        <br>
        <button type="submit">Submit</button>
   </form>
   </div>
   
</div>

